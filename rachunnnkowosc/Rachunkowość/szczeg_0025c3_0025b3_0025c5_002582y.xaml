<Window x:Class="Rachunkowość.Szczegóły"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rachunkowość"
        Title="Szczegóły" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Button x:Name="OkButton" Grid.Row="1" Content="OK" Margin="30,5,30,5" FontSize="25"/>
    <TextBox x:Name="SzczegółyTB" Margin="10,10,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"
             FontSize="20" IsReadOnly="true"/>
  </Grid>
</Window>